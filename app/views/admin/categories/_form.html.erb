<%= form_with model: category, url: url, method: method, data: { controller: '', turbo: 'false' }, class: 'form mt-2' do |f| %>


  <% if category.errors.any? %>
    <ul>
      <% category.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group w-100 mb-2">
    <%= f.label :name %>
  </div>
  <div class="form-group w-100 mb-2">
    <%= f.text_field :name %>
  </div>
  <%= f.submit class: "btn btn-warning" %>
<% end %>