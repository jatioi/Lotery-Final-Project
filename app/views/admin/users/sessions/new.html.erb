<div class="d-flex flex-column justify-content-center align-items-center vw-100 vh-100">
  <h2 class="mb-5 font-monospace fw-bold fs-2">Admin Login</h2>

  <div class="border rounded-5 p-2 d-flex justify-content-center align-items-center" style="width: 500px; height: 350px">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-2">
        <%= f.label :email, class: "font-monospace" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 350px" %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :password, class: "font-monospace" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 350px" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-4 font-monospace">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions a">
        <%= f.submit "Log in", class: "btn btn-outline-primary w-100 font-monospace fw-normal " %>
      </div>
    <% end %>
  </div>

</div>

