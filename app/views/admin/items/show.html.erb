<div class="vh-100 vw-100">
  <%= render partial: 'admin/shared/nav' %>

  <div class="d-flex flex-row h-100 w-100">
    <%= render partial: 'admin/shared/side_nav' %>

    <div class="p-4 w-100 mb-4">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="d-flex flex-row align-items-center">
          <%= link_to 'Back', admin_items_path, class: "btn btn-primary me-2" %>
          <span class="fs-3 fw-semibold"><%= @item.name %></span>

        </div>

        <div class="d-flex flex-row align-items-center">
          <%= link_to 'Edit', edit_admin_item_path(@item), class: "btn btn-warning me-2" %>
          <%= button_to 'Delete', admin_item_path(@item), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>



      <div class="d-flex flex-row">
        <%= image_tag @item.image.url, class: 'me-4', style: 'object-fit: cover; width: 500px; height: 500px;' if @item.image.present? %>
        <div class="card" style="width: 18rem;">
          <div class="card-body font-monospace">
            <h5>Quantity: <%= @item.quantity %></h5>
            <h5>Minimum tickets: <%= @item.minimum_tickets %></h5>
            <h5>State: <%= @item.state ? @item.state : "None" %></h5>
            <h5>Batch count: <%= @item.batch_count %></h5>
            <h5>Online at: <%= @item.online_at ? @item.online_at : "None" %></h5>
            <h5>Offline at: <%= @item.offline_at ? @item.offline_at : "None" %></h5>
            <h5>Start at: <%= @item.start_at ? @item.start_at : "None" %></h5>
            <h5>Status: <%= @item.status %></h5>
            <h5>Category: <%= @item.categories.pluck(:name).join(', ') %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
