<div class="vh-100 vw-100">
  <%= render partial: 'admin/shared/nav' %>

  <div class="d-flex flex-row h-100 w-100">
    <%= render partial: 'admin/shared/side_nav' %>


    <div class="p-4 w-80 mb-4 ">
      <div class="d-flex flex-row justify-content-between align-items-center w-100 ">
        <h3>Items</h3>
        <%= link_to 'add', new_admin_item_path, class: 'btn btn-success' %>
      </div>

      <div class="w-100 border-bottom my-2"></div>

      <% if @items.present? %>
        <div class="row row-cols-*">
          <% @items.each do |item| %>
            <div class="col">
              <%= render partial: 'admin/shared/card', locals: { item: item } %>
            </div>
          <% end %>
        </div>


      <% end %>

    </div>
  </div>
</div>