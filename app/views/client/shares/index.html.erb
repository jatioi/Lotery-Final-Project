<%= render partial: 'client/shared/nav' %>

<div class="container mb-5">
  <%= render partial: 'client/shared/carousel' %>

  <%= link_to 'Button', '', class: 'btn btn-primary w-100 mt-2' %>

  <section class="d-flex flex-column justify-content-center align-items-center w-100 mt-2 mb-5">
    <% if @shares.present? %>
      <% @shares.each do |share| %>
        <div class="card flex-row w-100 align-items-center">
          <% if share.picture.present? %>
            <%= image_tag share.picture.url, class: 'rounded-start', style: 'object-fit: cover; width: 200px; height: 200px' %>
          <% end %>
          <div class="card-body d-flex flex-column justify-content-center">
            <span class="fw-semibold"><%= share.user&.username %></span>
            <span><%= share.comment %></span>
          </div>
        </div>
      <% end %>
    <% else %>
      No DATA
    <% end %>
  </section>
</div>
