<%= render partial: 'client/shared/nav' %>

<div class="container">
  <h2 class="font-monospace">Sign up</h2>
  <div class="d-flex flex-row justify-content-between align-items-center border rounded-pill my-4">
    <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-outline-primary w-50 font-monospace " %><br/>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-success w-50 font-monospace active" %><br/>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "client/users/shared/error_messages", resource: resource %>

    <div class="form-group mb-2 font-monospace">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: :username, class: "form-control" %>
    </div>

    <div class="form-group mb-2 font-monospace">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control" %>
    </div>

    <div class="form-group mb-2 font-monospace">
      <%= f.password_field :password, autocomplete: "new-password",
                           placeholder: "Password #{@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : ""}",
                           class: "form-control" %>
    </div>

    <div class="form-group mb-4 font-monospace">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Register", class: "btn btn-outline-primary w-100 font-monospace" %>
    </div>
  <% end %>

</div>