<%= render partial: 'client/shared/nav' %>

<div class="container">
  <h2>Log in</h2>
  <div class="d-flex flex-row justify-content-between align-items-center border rounded-pill my-4">
    <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-outline-primary w-50 font-monospace active" %><br/>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-success w-50 font-monospace " %><br/>
  </div>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-2 font-monospace">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control w-100" %>
    </div>

    <div class="form-group mb-2 font-monospace">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: :password, class: "form-control w-100" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group mb-4 font-monospace">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-outline-primary w-100 font-monospace" %>
    </div>
  <% end %>
  <%= render "client/users/shared/links" %>
</div>



