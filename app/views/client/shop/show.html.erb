<%= render partial: 'client/shared/nav' %>

<div class="container ">


  <div class="position-absolute top-50 start-50 translate-middle   ">
    <div class="card mb-4 p-2" style="width: 400px; height: 500px">
      <% if @offer.present? %>
        <img class="card-img-top img-fluid p-2 border " src="<%= @offer.image&.url %>" alt="Item Image" style="height: 100%; width: 250px; margin: auto">
        <div class="card-body mb-4">
          <span class="badge rounded-pill bg-warning text-dark mb-0">sale</span>
          <h3 class="card-title text-center"><%= @offer.name %></h3>
          <h4 class=" p-1 mt- bg-light text-danger fw-bolder text-center">â‚± <%= @offer.amount %></h4>
      <% else %>
        <p>Offer not found</p>
      <% end %>
      </div>
    </div>
    <div class="justify-content-center m-auto text-center ">
      <%= form_with url: purchase_index_path, method: :post, class: 'mb-2' do |f| %>
        <%= f.hidden_field :offer_id, value: @offer.id %>
        <%= f.submit 'Purchase', class: ' btn btn-success m-auto w-50 mt-2' %>
      <% end %>
    </div>
  </div>
</div>


