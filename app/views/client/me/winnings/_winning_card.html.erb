<div class="card mb-2">
  <div class="card-body d-flex flex-row">
    <div class="d-flex flex-column h-100 me-4">
      <span>Serial number: <%= winning.ticket.serial_number %></span>
      <span>State: <%= winning.state %></span>
      <span>Owner: <%= winning.user.email %></span>
      <span>Created at: <%= winning.created_at %></span>
    </div>

    <div class="d-flex flex-column h-100 me-2">
      <span>Item: <%= winning.item.name %></span>
      <span>Batch count: <%= winning.item_batch_count %></span>
      <span>Address: <%= winning.address.present? ? full_address(winning.address) : 'None' %> </span>
    </div>
    <span class="d-flex justify-content-end w-50 h-50">
      <%= link_to (winning.won? ? 'Claim' : 'Claimed'), claim_prize_winning_history_path(winning), class: "btn btn-primary h-100 #{'disabled' unless winning.won?}", method: :patch %>
      <%= link_to "#{winning.delivered? ? 'Share' : 'Shared'}", share_prize_winning_history_path(winning),
                  class: "btn btn-warning h-100 ms-2 #{'disabled' unless winning.delivered?}" if winning.delivered? || winning.shared? || winning.published? || winning.remove_published? %></span>
  </div>
</div>