<!-- winnings/claim.html.erb -->
<%= form_with(model: @winning, url: url, method: method, multipart: true) do |f| %>
  <!-- Display other winning details -->


  <div class="form-group mb-2">
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :comment , class: "form-label"%>
    <%= f.text_field :comment, autofocus: true, placeholder: "Set comment...", class: "form-control"%>
  </div>

  <%= f.submit 'Share Feedback', class: 'btn btn-primary' %>
<% end %>
