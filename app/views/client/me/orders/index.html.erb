<%= render partial: 'client/shared/nav' %>

<div class="container p-4 mt-4 border rounded">
  <div class="d-flex flex-column">
    <span class="mb-2">Username: <%= current_client_user.username %></span>
    <small class="mb-2">Email: <%= current_client_user.email %></small>
    <small class="mb-2">Coins: <%= current_client_user.coins %></small>
  </div>

  <%= link_to "Cash In Now", "", class: "btn btn-outline-success w-100  mb-2 " %>

  <div class="d-flex flex-row w-100">
    <%= link_to "Edit Profile", edit_client_user_registration_path, class: "btn btn-outline-primary w-50 me-4" %>
    <%= link_to "Address", address_index_path, class: "btn btn-primary w-50" %>
  </div>
</div>

<div class="container d-flex flex-row mb-2 mt-3">
  <%= link_to 'Order History', order_history_index_path, class: "btn btn-outline-primary me-2 #{"active" if controller_name == 'client/me' || 'client/me/orders'}", style: 'width: 200px' %>
  <%= link_to 'Lottery History', lottery_history_index_path, class: "btn btn-outline-primary me-2 #{"active" if controller_name == 'client/me/lotteries'}", style: 'width: 200px' %>
  <%= link_to 'Winning History', winning_history_index_path, class: "btn btn-outline-primary me-2 #{"active" if controller_name == 'client/me/winnings'}", style: 'width: 200px' %>
  <%= link_to 'Invitation History', invite_history_index_path, class: "btn btn-outline-primary #{"active" if controller_name == 'client/me/invites'}", style: 'width: 200px' %>
</div>

<div class="container">
  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <%= render partial: 'client/me/orders/order_card', locals: { order: order } %>
    <% end %>
  <% else %>
    NO DATA
  <% end %>

</div>

