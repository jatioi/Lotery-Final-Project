<%= render partial: 'client/shared/nav' %>

<div class="container border-1 mt-2 mb2">
  <div class="d-flex flex-column justify-content-center align-items-center" style="height: 500px;">
    <span class="fs-2 fw-semibold font-monospace">Invite other people!</span>
    <div class="w-50 border-bottom mb-4"></div>
    <div class="mb-4" style="width: 300px; height: 320px">

      <% if @as_svg.present? %>
        <%= raw @as_svg.html_safe %>
      <% else %>
        <!-- Handle the case when @as_png is nil, e.g., display a default message or provide an alternative content -->
        <p>No content available</p>
      <% end %>
    </div>
    <div class="input-group" style="width: 500px;" data-controller="clipboard">
      <span class="form-control" data-clipboard-target="link">client.com:3000/users/sign_up?promoter=<%= current_client_user.email %></span>
      <button class="btn btn-outline-secondary" data-action="click->clipboard#copy"><i class="fa-solid fa-copy"></i>
      </button>
    </div>
  </div>
</div>

